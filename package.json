{
	"name": "bun-hono-template",
	"private": true,
	"description": "This is a template repository for the backend services",
	"type": "module",
	"scripts": {
		"configure": "bun install && husky",
		"dev": "bun run --watch src/index.ts",
		"db:generate": "drizzle-kit generate:pg --schema ./src/db/schema.ts --out=./src/db/migrations",
		"db:migrate": "bun run ./src/db/migrate.ts",
		"lint": "bunx @biomejs/biome lint ./src",
		"test": "bun test ./**/*.test.ts --coverage",
		"format": "bunx @biomejs/biome format ./src --write",
		"build": "bun build src/index.ts --outdir ./dist --target bun",
		"start": "bun run src/index.ts"
	},
	"dependencies": {
		"@opentelemetry/auto-instrumentations-node": "^0.46.0",
		"@opentelemetry/exporter-metrics-otlp-grpc": "^0.52.0",
		"@opentelemetry/exporter-trace-otlp-grpc": "^0.52.0",
		"@opentelemetry/resources": "^1.22.0",
		"@opentelemetry/sdk-metrics": "^1.22.0",
		"@opentelemetry/sdk-node": "^0.52.0",
		"@opentelemetry/sdk-trace-node": "^1.22.0",
		"@opentelemetry/semantic-conventions": "^1.22.0",
		"drizzle-orm": "^0.31.2",
		"hono": "^4.1.4",
		"mongoose": "^8.2.3",
		"pino": "^9.1.0",
		"pino-opentelemetry-transport": "^1.0.0",
		"postgres": "^3.4.4",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@types/bun": "latest",
		"drizzle-kit": "^0.22.7",
		"husky": "^9.0.11",
		"typescript": "^5.4.5"
	}
}
